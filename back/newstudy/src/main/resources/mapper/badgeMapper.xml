<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.newstudy.model.dao.BadgeDao">
    <select id="getBadge" parameterType="int" resultType="com.ssafy.newstudy.model.dto.BadgeResponse">
        SELECT u_id,
               b_id
        FROM `USER_BADGE`
        WHERE u_id = #{u_id}
    </select>
    <insert id="addBadge" parameterType="com.ssafy.newstudy.model.dto.BadgeRequest">
        INSERT INTO `USER_BADGE`(u_id, b_id)
        VALUES (#{u_id}, #{b_id})
    </insert>
</mapper>