<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.newstudy.model.dao.VocabularyDao">

    <select id="selectVocaburaly" parameterType="int" resultType="VocabularyResponseDto">
        SELECT eng,
               done
        FROM `USER_VOCA`
        WHERE u_id = #{u_id}
    </select>

    <insert id="insertVocaburaly" parameterType="VocabularyRequestDto">
        INSERT INTO `USER_VOCA`(u_id, eng)
        VALUES (#{u_id}, #{eng})
    </insert>

    <update id="updateVocaburaly" parameterType="VocabularyRequestDto">
        UPDATE `USER_VOCA`
        SET done = #{done}
        where u_id = #{u_id}
    </update>

</mapper>
